#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	$(MAKE)

override_dh_auto_test:
	# Skip tests (require interactive terminal)

override_dh_auto_clean:
	$(MAKE) clean || true

override_dh_auto_install:
	mkdir -p debian/ncurses-menu/usr/bin
	install -m 0755 ncurses-menu debian/ncurses-menu/usr/bin/
